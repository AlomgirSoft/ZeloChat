<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
        android:layout_margin="2dp"
            android:src="@drawable/ic_launcher_background"
            app:civ_border_color="#DFF5FF"
            app:civ_border_width="1.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/onlineUserIcon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_launcher_background"
            android:visibility="visible"
            app:civ_border_color="#02D60B"
            app:civ_border_width="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/profile_image"


            app:layout_constraintHorizontal_bias="1.15"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintStart_toStartOf="@id/profile_image"


            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/offlineUserIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="8dp"
            android:visibility="gone"
            android:src="@drawable/ic_launcher_background"
            app:civ_border_color="#858585"
            app:civ_border_width="8dp"
            app:layout_constraintStart_toStartOf="@id/profile_image"
            app:layout_constraintBottom_toBottomOf="@id/profile_image"/>


        <TextView
            android:id="@+id/userNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Masum Mehedi"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"


            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"/>


        <TextView
            android:id="@+id/userEmailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:gravity="center"
            android:includeFontPadding="false"
            android:text="example@gmail.com"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/userNameTv"/>


